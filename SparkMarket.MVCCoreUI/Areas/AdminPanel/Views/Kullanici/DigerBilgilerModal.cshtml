@model KullaniciDigerBilgilerVm
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <h4 class="modal-title">Kullanici Diger Bilgiler</h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <div class="form-group">
                <label asp-for="CepTelefonu">Cep Telefonu</label>
                <p>@Model.CepTelefonu</p>
            </div>
            <hr />
            <div class="form-group">
                <label asp-for="TckimlikNo">TC Kimlik No</label>
                <p>@Model.TckimlikNo</p>
            </div>
            <hr />
            <div class="form-group">
                <label asp-for="KullaniciTipiId">KullaniciTipi</label>
                <p>@Model.KullaniciTipi</p>
            </div>
            <hr />
            @if (Model.KullaniciTipi == "Kurumsal")
            {
                <label asp-for="VergiNo">Vergi No</label>
                <div class="form-group">
                    <p>@Model.VergiNo</p>
                </div>
                <hr />

            }
            
            @if (Model.KullaniciTipi == "Kurumsal")
            {
                <label asp-for="VergiNo">Vergi Dairesi</label>
                <div class="form-group">
                    <p>@Model.VergiDairesi</p>
                </div>
                <hr />
            }
                        
            @if (Model.KullaniciAdresi != null)
            {
                <div class="form-group">
                    <label asp-for="KullaniciAdresi.Sehir">Sehir</label>
                    <p>@Model.KullaniciAdresi.Sehir</p>
                </div>
                <div class="form-group">
                    <label asp-for="KullaniciAdresi.Semt">Semt</label>
                    <p>@Model.KullaniciAdresi.Semt</p>
                </div>
                <div class="form-group">
                    <label asp-for="KullaniciAdresi.Adres">Adres</label>
                    <p>@Model.KullaniciAdresi.Adres</p>
                </div>
                <hr />
            }
        </div>
        <div class="modal-footer justify-content-between">
            <button type="button" class="btn btn-default" data-dismiss="modal">Kapat</button>
            <button type="button" class="btn btn-primary" onclick="EditDigerBilgiler(@Model.KullaniciId)">Düzenle</button>
        </div>
    </div>
    <!-- /.modal-content -->
</div>
<!-- /.modal-dialog -->
