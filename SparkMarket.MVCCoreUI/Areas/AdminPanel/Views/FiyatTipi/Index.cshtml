@section ContentHeader
{
        <button type="button" class="btn btn-default" data-toggle="modal" data-target="#modalFiyatTipiEkle">
            Fiyat Tipi Ekle
        </button>
}

@model FiyatTipiIndexViewModel
<div class="col-12">

    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Fiyat Tipi Listesi</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
            <table id="tblFiyatTipi" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th></th>
                        <th>Fiyat Tipi Adı</th>
                        <th></th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
            </table>
        </div>
        <!-- /.card-body -->
    </div>

</div>

@section Styles {

        <link href="~/adminassets/plugins/bootstrap-switch/css/bootstrap3/bootstrap-switch.css" rel="stylesheet" />

        <style>
            .select2-container .select2-selection--single {
                height: 40px;
            }
        </style>

}
<form id="frmFiyatTipiEkle">
    <div class="modal fade" id="modalFiyatTipiEkle">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Fiyat Tipi Ekleme Paneli</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div class="card-body">
                        <div class="form-group">
                            <label>Fiyat Tipi Adı</label>
                            <input type="text" class="form-control" asp-for="FiyatTipiAdi" placeholder="Fiyat Tipi Adı">
                        </div>
                        
                    </div>
                    <!-- /.card-body -->




                </div>
                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-default" data-dismiss="modal">VAZGEÇ</button>
                    <button type="button" id="btnFiyatTipiEkle" class="btn btn-primary">KAYDET</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>

</form>

<form id="frmFiyatTipiGuncelle">
    <div class="modal fade" id="modalFiyatTipiGuncelle">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Fiyat Tipi Güncelleme Paneli</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div class="card-body">
                        <div class="form-group">
                            <input type="hidden" class="form-control" id="GId">

                            <label>Fiyat Tipi Adı</label>
                            <input type="text" class="form-control" id="GFiyatTipiAdi" placeholder="Fiyat Tipi">
                        </div>
                       

                    </div>
                    <!-- /.card-body -->




                </div>
                <div class="modal-footer justify-content-between">
                    <button type="button" class="btn btn-default" data-dismiss="modal">VAZGEÇ</button>
                    <button type="button" id="btnFiyatTipiGuncelle" class="btn btn-primary">GÜNCELLE</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>

</form>



@section Scripts {


        <script src="~/adminassets/js/custom/fiyatTipi.js"></script>

}